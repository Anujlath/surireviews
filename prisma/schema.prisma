// Prisma schema for Trustpilot-style review platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  BUSINESS
  ADMIN
  APPROVAL
  MODERATOR
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ClaimStatus {
  PENDING
  APPROVED
  REJECTED
}

enum VerificationRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  password      String?
  role          Role      @default(USER)
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  reviews       Review[]
  claimedBusiness Business? @relation("BusinessOwner")
  claimRequests BusinessClaimRequest[]
  verificationRequests BusinessVerificationRequest[] @relation("BusinessVerificationRequester")
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Business {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  website     String?
  category    String
  city        String?
  state       String?
  country     String?
  latitude    Float?
  longitude   Float?
  banner      String?
  description String?  @db.Text
  logo        String?
  verified    Boolean  @default(false)
  claimedById String?  @unique @map("claimed_by_id")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  claimedBy User?   @relation("BusinessOwner", fields: [claimedById], references: [id])
  claimRequests BusinessClaimRequest[]
  verificationRequests BusinessVerificationRequest[]
  reviews   Review[]
  replies   Reply[]

  @@index([category])
  @@index([slug])
  @@index([verified])
  @@index([latitude, longitude])
  @@map("businesses")
}

model BusinessClaimRequest {
  id          String      @id @default(uuid())
  businessId  String      @map("business_id")
  userId      String      @map("user_id")
  status      ClaimStatus @default(PENDING)
  note        String?     @db.Text
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([businessId, userId])
  @@index([businessId])
  @@index([userId])
  @@index([status])
  @@map("business_claim_requests")
}

model BusinessVerificationRequest {
  id            String                    @id @default(uuid())
  businessId    String                    @map("business_id")
  requestedById String                    @map("requested_by_id")
  status        VerificationRequestStatus @default(PENDING)
  note          String?                   @db.Text
  createdAt     DateTime                  @default(now())
  updatedAt     DateTime                  @updatedAt

  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  requestedBy User     @relation("BusinessVerificationRequester", fields: [requestedById], references: [id], onDelete: Cascade)

  @@index([businessId])
  @@index([requestedById])
  @@index([status])
  @@map("business_verification_requests")
}

model Review {
  id         String       @id @default(uuid())
  businessId String       @map("business_id")
  userId     String       @map("user_id")
  rating     Int
  title      String
  content    String       @db.Text
  status     ReviewStatus @default(PENDING)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  // Relations
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reply    Reply?

  @@unique([businessId, userId])
  @@index([businessId])
  @@index([userId])
  @@index([status])
  @@map("reviews")
}

model Reply {
  id         String   @id @default(uuid())
  reviewId   String   @unique @map("review_id")
  businessId String   @map("business_id")
  content    String   @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  review   Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@map("replies")
}
