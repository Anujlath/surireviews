# App
NEXTAUTH_URL="https://your-vercel-domain.vercel.app"
NEXTAUTH_SECRET="replace-with-strong-random-secret"

# Database (Neon Postgres)
DATABASE_URL="postgresql://user:password@host/db?sslmode=require"
# Optional but recommended for Prisma migrations (non-pooling/direct URL from Neon)
DIRECT_URL="postgresql://user:password@host/db?sslmode=require"

# OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# SMTP (required for signup OTP emails in production)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="no-reply@surireviews.com"

# Maps (optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

# Legacy catch-all API route (optional, only if you use /api/[[...path]])
MONGO_URL=""
DB_NAME=""
CORS_ORIGINS="*"
